<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/" xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>{{ .Board.Name }}</ShortName>
  <Description>Search {{ .Board.Name }}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">http://{{ .Request.Host }}/favicon.ico</Image>
  <Url type="text/html" method="get" template="http://{{ .Request.Host }}/search/?query={searchTerms}&ref=opensearch"/>
  <moz:SearchForm>http://{{ .Request.Host }}/search/</moz:SearchForm>
</OpenSearchDescription>
